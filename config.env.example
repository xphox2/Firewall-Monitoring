# Firewall Monitor Configuration
# Copy this file to /etc/firewall-mon/config.env and edit the values

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
SERVER_ENABLE_TLS=false
SERVER_TLS_CERT=/etc/firewall-mon/tls.crt
SERVER_TLS_KEY=/etc/firewall-mon/tls.key

# Security - IMPORTANT: Change these in production!
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this
ADMIN_SECRET_KEY=your-admin-secret-change-this
COOKIE_SECURE=true
COOKIE_SAMESITE=Strict

# Admin Credentials - CHANGE THESE!
ADMIN_USERNAME=admin
ADMIN_PASSWORD=changeme123!
BCRYPT_COST=12
TOKEN_EXPIRY=24h
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=15m

# SNMP Configuration
SNMP_HOST=192.168.1.1
SNMP_PORT=161
SNMP_COMMUNITY=public
SNMP_VERSION=2c
SNMP_TIMEOUT=5s
SNMP_RETRIES=2
SNMP_POLL_INTERVAL=60s

# SNMP Trap Receiver
SNMP_TRAP_LISTEN=0.0.0.0:162
SNMP_TRAP_COMMUNITY=public

# Database (SQLite by default)
DB_TYPE=sqlite
DB_FILE_PATH=/var/lib/firewall-mon/data.db

# Alert Thresholds
CPU_THRESHOLD=80.0
MEMORY_THRESHOLD=80.0
DISK_THRESHOLD=90.0
SESSION_THRESHOLD=100000
INTERFACE_DOWN_ALERT=true

# Email Notifications (optional)
EMAIL_ENABLED=false
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM=firewall-mon@example.com
SMTP_TO=admin@example.com

# Webhook Notifications (optional)
SLACK_WEBHOOK_URL=
DISCORD_WEBHOOK_URL=
WEBHOOK_URL=

# Uptime Tracking
UPTIME_TRACKING_ENABLED=true
UPTIME_BASELINE_FILE=/var/lib/firewall-mon/uptime.json
